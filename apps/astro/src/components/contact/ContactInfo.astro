---
import { Image } from "astro:assets";

import emailSvg from "~/assets/email.svg";
import instagramSvg from "~/assets/instagram.svg";
import linkedinSvg from "~/assets/linkedin.svg";
---

<div class="flex h-full min-h-screen w-full flex-col justify-center p-10">
  <div class="flex flex-col gap-8 lg:gap-20">
    <p class="text-center font-serif text-5xl text-[#2856E8] lg:text-7xl">
      Open to work 2025
    </p>
    <div class="flex flex-col items-center gap-4 text-center">
      <p class="font-sans text-base font-medium text-[#f6f6f6]">
        Looking to work together or get in touch?
      </p>
      <div class="flex items-center gap-2">
        <a
          href="mailto:lesquillon@gmail.com"
          class="font-sans text-xl text-[#b0b0b0]"
        >
          lesquillon@gmail.com
        </a>
        <Image
          src={emailSvg}
          alt="email"
          width="24"
          height="25"
          loading="eager"
        />
      </div>
      <div class="flex flex-row gap-4">
        <Image
          src={linkedinSvg}
          alt="linkedin"
          width="32"
          height="32"
          class="max-w-fit"
          loading="eager"
        />
        <Image
          src={instagramSvg}
          alt="instagram"
          width="32"
          height="32"
          class="max-w-fit"
          loading="eager"
        />
      </div>
    </div>
  </div>
</div>
