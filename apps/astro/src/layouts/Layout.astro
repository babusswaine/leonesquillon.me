---
import BaseHead from "~/components/BaseHead.astro";
import Frame from "~/components/common/Frame";
import CursorHighlight from "~/components/CursorHighlight";
import SEO from "~/components/SEO.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead />
    <slot name="seo">
      {/* @ts-expect-error: slot prop isn't necessary in this component */}
      <SEO />
    </slot>
  </head>

  <body class="dark bg-background lg:overflow-hidden">
    <Frame client:only />
    <CursorHighlight client:load />
    <main
      class="mx-auto flex min-h-screen max-w-screen-2xl flex-col transition-all lg:flex-row"
    >
      <slot />
    </main>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
